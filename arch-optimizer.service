[Unit]
Description=Arch Linux System Optimizer
Documentation=https://github.com/your-repo/gemini-learning
After=network-online.target
Wants=network-online.target
ConditionPathExists=/home/jpouliot/dev/rep/gemini-learning/arch_optimizer.py

[Service]
Type=oneshot
User=jpouliot
Group=jpouliot
WorkingDirectory=/home/jpouliot/dev/rep/gemini-learning
ExecStart=/home/jpouliot/dev/rep/gemini-learning/.venv/bin/python arch_optimizer.py --config config.json --format text
StandardOutput=append:/home/jpouliot/arch-optimizer-startup.log
StandardError=append:/home/jpouliot/arch-optimizer-startup.log
Environment=PYTHONPATH=/home/jpouliot/dev/rep/gemini-learning
RemainAfterExit=yes
TimeoutStartSec=300

[Install]
WantedBy=multi-user.target